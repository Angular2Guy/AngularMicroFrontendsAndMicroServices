{
  "name": "payment",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --proxy-config proxy.conf.json",
    "build": "ng build --configuration production",
    "build-nf": "ng build --configuration development",
    "build-stats": "ng build --configuration production --stats-json",
    "watch": "ng build --watch --configuration development",
    "analyse": "webpack-bundle-analyzer dist/manager/de/stats.json",
    "test": "ng test --browsers ChromeHeadless --watch=false --code-coverage=true",
    "test-chromium": "ng test --browsers ChromiumHeadless --watch=false --code-coverage=true",
    "test-local": "ng test --browsers Chromium --watch=true",
    "prebuild": "rimraf ./dist && mkdirp ./dist",
    "postbuild": "npm run deploy",
    "predeploy": "rimraf ../../../paymnet-backend/src/main/resources/static/*",
    "deploy": "cpy 'dist/payment/browser/**' '../../../payment-backend/src/main/resources/static/'",
    "prettier": "npx prettier --write 'src/**/*.{ts,html,scss,json}'"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.0.4",
    "@angular/cdk": "^21.0.2",
    "@angular/common": "^21.0.4",
    "@angular/compiler": "^21.0.7",
    "@angular/core": "^21.0.4",
    "@angular/forms": "^21.0.4",
    "@angular/platform-browser": "^21.0.4",
    "@angular/platform-browser-dynamic": "^21.0.4",
    "@angular/router": "^21.0.4",
    "@angular/material": "^21.0.2",
    "@jsverse/transloco": "^7.5.0",
    "@jsverse/transloco-locale": "^7.0.1",
    "es-module-shims": "^1.5.12",
    "luxon": "^3.4.0",
    "material-icons": "^1.13.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.3",
    "@angular/cli": "^21.0.3",
    "@angular/compiler-cli": "^21.0.4",
    "@types/jasmine": "~5.1.0",
    "cpy-cli": "^4.2.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "mkdirp": "^1.0.4",
    "prettier": "^3.0.0",
    "replace-in-file": "^8.2.0",
    "rimraf": "^5.0.2",
    "typescript": "~5.9.3",
    "webpack-bundle-analyzer": "^4.5.0"
  }
}